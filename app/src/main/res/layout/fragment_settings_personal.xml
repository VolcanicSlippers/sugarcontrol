<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/text_for_personal_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your personal details:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@id/text_for_personal_settings"
        android:id="@+id/text_first_name_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"/>

    <EditText
        android:id="@+id/field_first_name_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="first name"
        android:layout_toRightOf="@id/text_first_name_change"
        android:layout_alignBaseline="@id/text_first_name_change"
        />


    <TextView
        android:id="@+id/text_last_name_change"
        android:layout_below="@+id/text_first_name_change"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
        android:id="@+id/field_last_name_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/text_last_name_change"
        android:layout_alignBaseline="@id/text_last_name_change"
        />

    <TextView
        android:id="@+id/text_height_change"
        android:layout_below="@+id/text_last_name_change"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
        android:id="@+id/field_height_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="177 cm"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/text_height_change"
        android:layout_alignBaseline="@id/text_height_change"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/height_units_change"
        android:text="cm"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/field_height_change"
        android:layout_alignBaseline="@+id/field_height_change"
        />


    <TextView
        android:id="@+id/text_weight_change"
        android:layout_below="@+id/text_height_change"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="263dp" />

    <EditText
        android:id="@+id/field_weight_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 kg"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/text_weight_change"
        android:layout_alignBaseline="@id/text_weight_change"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_units_change"
        android:text="kg"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/field_weight_change"
        android:layout_alignBaseline="@+id/field_weight_change"
        />


    <TextView
        android:id="@+id/text_bgl_range"
        android:layout_below="@+id/text_weight_change"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bgl_range"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="263dp" />


    <Button
        android:id="@+id/btn_save_personal_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_bgl_range"
        android:textAllCaps="false"
        android:text="@string/save_personal_settings"
        />
</RelativeLayout>