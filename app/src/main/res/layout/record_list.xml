<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/range_pic_on_card"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/date_reading_on_card"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/ic_priority_high_black_24dp" />

        <TextView
            android:id="@+id/date_reading_on_card"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:text="DD/MM/YYYY"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sugar_level_reading_on_card"
            android:layout_toEndOf="@+id/sugar_level_reading_on_card"
            android:text="mmol/L"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/sugar_level_reading_on_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_reading_on_card"
            android:text="7.9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/time_on_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:33:00"
            android:textSize="25sp" />

        <!--<TextView-->
            <!--android:id="@+id/notes_on_card"-->
            <!--android:layout_width="136dp"-->
            <!--android:layout_height="34dp"-->
            <!--android:layout_alignBottom="@+id/range_pic_on_card"-->
            <!--android:layout_toLeftOf="@id/range_pic_on_card"-->
            <!--android:text="some notes will be described here..."-->
            <!--android:textSize="15sp" />-->


    </RelativeLayout>

