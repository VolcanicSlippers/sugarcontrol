    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <ImageView
        android:interpolator="@anim/linear_interpolator"
        android:id="@+id/btn_record"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/insulina_main_page"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon_plusxxxhdpi" />

    <ImageView
        android:layout_alignTop="@id/btn_history"
        android:id="@+id/btn_history"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/insulina_main_page"
        app:srcCompat="@drawable/historyxxxhdpi" />

    <ImageView
        android:id="@+id/btn_graph"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/insulina_main_page"
        app:srcCompat="@drawable/graphxxxhdpi" />

    <ImageView
        android:id="@+id/btn_record_medicine"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_record"
        android:textAllCaps="false"
        app:srcCompat="@drawable/pillxxxhdpi"
        android:layout_toStartOf="@+id/insulina_main_page"
        android:text="@string/record_medicine" />
    <TextView
        android:id="@+id/txt_record_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_record_medicine"
        android:text="@string/record_medicine"
        android:gravity="center"
        android:layout_alignRight="@id/btn_record_medicine"
        android:layout_alignLeft="@id/btn_record_medicine"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/btn_record_HbA1c"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/btn_graph"
        android:layout_below="@+id/btn_record"
        app:srcCompat="@drawable/flaskhdpi"
        android:textAllCaps="false"
        android:text="@string/record_hba1c" />

    <ImageView
        app:srcCompat="@drawable/bloodhdpi"
        android:id="@+id/btn_record_bgl"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_record"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="@string/record_bgl" />
    <TextView
        android:id="@+id/txt_record_bgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_record_bgl"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="@string/record_bgl"
        />



    <TextView
        android:id="@+id/txt_record_hba1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_record_medicine"
        android:gravity="center"
        android:layout_alignRight="@id/btn_record_HbA1c"
        android:layout_alignLeft="@id/btn_record_HbA1c"
        android:text="@string/record_hba1c"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txt_main_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignRight="@id/btn_history"
        android:layout_alignLeft="@id/btn_history"
        android:layout_below="@+id/btn_history"
        android:text="@string/txt_history" />

    <TextView
        android:id="@+id/txt_main_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignRight="@id/btn_graph"
        android:layout_alignLeft="@id/btn_graph"
        android:layout_below="@+id/btn_graph"
        android:text="@string/txt_stats" />


</RelativeLayout>